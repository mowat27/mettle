<!DOCTYPE html>
<html>
<head>
  <title>Mettle</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id='header'>
    <div id='logo'>
      <h1>Mettle - regression testing for big data sets</h1>
    </div>

    <% if params[:error_message] %>
      <div id='errors'><%= params[:error_message] %></div>
    <% end %>

    <ul id="nav">
      <li> <%= link_to "Try Mettle in your browser", "/" %> </li>
      <li> <%= link_to "About Mettle", "/about" %> </li>
    </ul>
  </div>

  <div id='wrap'>
    <div id='content'>
      <%= yield %>
    </div>
  </div>

  <div id='footer'>
    <%= render 'shared/sign_up_form' %>
    <%= render 'shared/feedback_form' %>
  </div>
</body>
</html>
